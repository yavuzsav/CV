@model AppUserLoginModel
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.80.0">
    <title>Sign In</title>

    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css">

    <!-- Custom styles for this template -->
    <link href="~/css/signin.css" rel="stylesheet">
</head>
<body class="text-center signinScreen">

<main class="form-signin">
    <form method="post" asp-action="Login" asp-controller="Auth">
        <img class="mb-4" src="https://img.icons8.com/wired/64/000000/edit-user-male.png" alt="">
        
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
        <label for="inputUserName" class="visually-hidden">
            User Name
            <span class="text-danger" asp-validation-for="UserName"></span>
        </label>
        <input type="text" id="inputUserName" class="form-control" placeholder="User Name" asp-for="UserName" required autofocus>

        <label for="inputPassword" class="visually-hidden mt-3">
            Password
            <span class="text-danger" asp-validation-for="Password"></span>
        </label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Password" asp-for="Password" required>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me" asp-for="RememberMe"> Remember me
            </label>
        </div>

        <button class="w-100 btn btn-lg btn-outline-light" type="submit">Sign in</button>

        <div class="text-white font-weight-bold mt-3" asp-validation-summary="ModelOnly">

        </div>
    </form>
</main>


</body>
</html>