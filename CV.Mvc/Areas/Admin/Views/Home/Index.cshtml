@model AppUserUpdateModel
@{
    Layout = "_Layout";
}

<form method="post" asp-action="Index" asp-area="Admin" asp-controller="Home" enctype="multipart/form-data">
    <div class="form-group">
        <label>First Name :</label>
        <input asp-for="FirstName" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label>Last Name :</label>
        <input asp-for="LastName" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label>Address :</label>
        <input asp-for="Address" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label>Email :</label>
        <input asp-for="Email" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label>Phone Number :</label>
        <input asp-for="PhoneNumber" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label>Short Description :</label>
        <input asp-for="ShortDescription" type="text" class="form-control">
    </div>

    <div class="form-group row">
        <div class="col-6">
            @{
                <label>Previous Photo</label>
                <img style="height: 4rem!important; width: 5rem!important;" src="/img/@Model.ImageUrl" alt="Previous Profile Photo">
            }

        </div>
        <div class="col-6">
            <label>Choose Photo</label>
            <input type="file" asp-for="Picture" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>